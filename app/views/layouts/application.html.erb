  <%= link_to 'All Activities', activities_path %>
  |
  <%= link_to 'All Activity Categories', categories_path %>
  |
  <%= link_to 'All Products', products_path %>
  |
  <%= link_to 'All Product Categories', kinds_path %>

    <%= yield %>

