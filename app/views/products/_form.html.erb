<%= form_with model: @product, local: true, html: { mulipart: true } do |f| %>

<%= f.label :name%>
<br>
<%= f.text_field :name %>
<br><br>

<%= f.label :description %>
<br>
<%= f.text_field :description %>
<br><br>

<%= f.label :sold %>
<br>
<%= f.check_box :sold %>
<br><br>

<%= f.label :price %>
<br>
<%= f.number_field :price %>
<br><br>

<%= f.label :kind_id, "Categories:"%>
<br>

<% Kind.all.each do |kind| %>
    <%= check_box_tag "kind_ids[]", kind.id, @product.kinds.include?(kind) %>
    <%= kind.name %> <br>
<% end %>
<br><br>

<%= f.label :image %>
<br>
<%= f.file_field :image %>
<br><br>

<%= f.submit %>

<% end %>
<br><br>